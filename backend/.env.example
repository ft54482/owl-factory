# 应用配置
APP_NAME=猫头鹰工厂后台管理系统
APP_VERSION=1.0.0
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# Supabase配置
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# JWT配置
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 数据库配置 (可选，如果使用直连)
DATABASE_URL=postgresql://user:password@localhost:5432/owl_factory

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379/0

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# 文件存储配置 (可选)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 安全配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
TRUSTED_HOSTS=localhost,127.0.0.1

# GPU集群配置
GPU_CONFIG_FILE=config/gpu_servers.json
GPU_MONITOR_INTERVAL=60

# 充值配置
RECHARGE_RATES_FILE=config/recharge_rates.json
DEFAULT_RECHARGE_RATE=1.0

# 监控配置
MONITOR_ENABLED=true
MONITOR_INTERVAL=300

# 维护模式
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=系统维护中，请稍后再试